name: Terraform

on:
  # push:
  #   branches:
  #     - main
  workflow_dispatch:
    inputs:
      environment:
        description: 'Environment to deploy to'
        required: true
        default: 'production'

jobs:
  terraform:
    runs-on: ubuntu-latest

    steps:
    - name: Checkout code
      uses: actions/checkout@v2

    - name: Set up Terraform
      uses: hashicorp/setup-terraform@v1
      with:
        terraform_version: 1.9.0

    - name: Terraform fmt
      run: terraform fmt -check=true

    - name: Terraform validate
      run: terraform validate

    - name: Set up SSH key
      env:
        SSH_PRIVATE_KEY: ${{ secrets.SSH_PRIVATE_KEY }}
      run: |
        mkdir -p ~/.ssh
        echo "$SSH_PRIVATE_KEY" > ~/.ssh/id_rsa
        chmod 600 ~/.ssh/id_rsa

    - name: Initialize Terraform
      run: terraform init

    - name: Apply Terraform
      run: terraform apply -auto-approve


#########################
#Перейдите в ваш репозиторий на GitHub.
#Перейдите в раздел "Settings" (Настройки).
#В меню слева выберите "Secrets and variables" (Секреты и переменные).
#Нажмите "Actions secrets" (Секреты действий).
#Нажмите "New repository secret" (Новый секрет репозитория).
#Введите имя секрета, например SSH_PRIVATE_KEY, и значение (ваш приватный ключ).
#Нажмите "Add secret" (Добавить секрет).
